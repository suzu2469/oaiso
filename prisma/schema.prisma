generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Reminder {
  id         Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt @default(now())
  message    String
  member_id   String
  channel_id  String
  guild_id    String
  remind_date DateTime
}
